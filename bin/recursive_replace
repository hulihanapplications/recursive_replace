#!/usr/bin/env ruby

require File.expand_path(File.join("..", "..", "lib", "recursive_replace"), __FILE__)

# Recursive String Replacement, starting in current dir.
# Author: Dave Hulihan

if ARGV.length < 2
  puts "Usage: recursive_replace [string1] [string2]"
  exit 0
end

@string1 = ARGV[0]
@string2 = ARGV[1]
@path 	 = ARGV[2] 

puts "Replacing #{@string1} with #{@string2} in #{@path.nil? ? Dir.pwd : @path}"
RecursiveReplace.go(@string1, @string2, @path)

puts "Done!"
